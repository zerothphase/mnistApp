#:kivy 1.0.9

<PaintWidget>


<Main>
    painter: paint_widget
    prediction_display: prediction
    canvas.before:
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2
        size_hint: 1, 1

        GridLayout:
            rows: 2
            size_hint: 0.5, 1

            StackLayout:
                size_hint: 1, 0.5

                PaintWidget:
                    canvas.before:
                        Color:
                            hsv: 0, 0, 0
                        Rectangle:
                            # self here refers to the widget i.e BoxLayout
                            pos: self.pos
                            size: self.size
                    #pos_hint: {'x': self.width - 300, 'y': self.height - 300}
                    id: paint_widget
                    size_hint: None, None
                    width: 300
                    height: 300 #self.parent.height


            StackLayout:
                cols: 1
                size_hint: 1, 0.2
                BoxLayout:
                    size_hint: 0.4, 0.5
                    orientation: 'vertical'
                    Button:
                        on_release: root.clear_canvas(self)
                        text: 'Clear'

                    Button:
                        on_release: root.predict(self)
                        text: 'Predict'

                    Button:
                        on_release: root.save_png(self)
                        text: 'Save'

        GridLayout:
            cols: 1
            size_hint: 0.5, 1

            GridLayout:
                cols: 1
                Label:
                    text: 'The digit on the image is:'
                Label:
                    id: prediction
                    text: ''
                Button:
                    size_hint: 0.5, 0.5
                    text: 'Btn'


